<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox fx:id="conocimientosView" spacing="5.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <TableView fx:id="conocimientosTableView" editable="true" HBox.hgrow="ALWAYS">
        <columns>
          <TableColumn fx:id="denominacionColumn" prefWidth="100.0" text="Denominación" />
          <TableColumn fx:id="nivelColumn" prefWidth="75.0" text="Nivel" />
        </columns>
      </TableView>
      <VBox spacing="5.0" HBox.hgrow="NEVER">
         <children>
            <Button fx:id="addConocimientoButton" mnemonicParsing="false" onAction="#onAddConocimientoAction" text="Añadir conocimiento" />
            <Button fx:id="addIdiomaButton" mnemonicParsing="false" onAction="#onAddIdiomaAction" prefWidth="126.4" text="Añadir idioma" />
            <Button fx:id="eliminarButton" mnemonicParsing="false" onAction="#onEliminarAction" prefWidth="126.4" text="Eliminar" />
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</HBox>
